    "/api/languagePackage/{languagePackageId}/group": {
      "post": {
        "summary": "Create group for language package",
        "tags": ["CREATE"],
        "operationId": "createGroup",
        "security": [],
        "parameters": [
          {"$ref": "#/components/parameters/languagePackageId"}
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/CreateGroup"
        },
